= simple_form_for(@snippet) do |f|
  - if @snippet.errors.any?
    #error_explanation
      %h2
        = pluralize(@snippet.errors.count, "error")
        prohibited this snippet from being saved:

      %ul
      - @snippet.errors.full_messages.each do |msg|
        %li= msg

  .inputs
    = f.input :caption
    = f.input :content
    = f.input :language
    = f.input :section_id

  .actions
    = f.button :submit
