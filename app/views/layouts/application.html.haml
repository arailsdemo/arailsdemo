!!!
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %title
      = "aRailsDemo#{(" | " + yield(:title)) unless yield(:title).blank?}"
    
    %meta(name="description" content="An example Ruby on Rails website.")
    %meta(name="keywords" content="rails, ruby, ruby on rails, demo, example, tutorial, programming")
    
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    
    = stylesheet_link_tag 'scaffold'
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield :head
  
  %body
    #container
      #header

      #content        
        = yield
        
      #sidebar
