= simple_form_for(@section) do |f|
  - if @section.errors.any?
    #error_explanation
      %h2
        = pluralize(@section.errors.count, "error")
        prohibited this section from being saved:

      %ul
      - @section.errors.full_messages.each do |msg|
        %li= msg

  .inputs
    = f.input :heading
    = f.input :body
    = f.input :position
    = f.input :post_id

  .actions
    = f.button :submit
